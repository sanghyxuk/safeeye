<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 가이드 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앱 사용 가이드"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 가이드 설명 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이 앱은 보행 신호와 장애물을 감지하여 안전한 도보를 지원합니다.\n\n"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- 사용 방법 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 앱 실행 후 카메라 버튼을 누릅니다.\n2. 보행 신호를 감지하면 경고음과 진동으로 알려줍니다.\n3. 필요 시 설정 버튼에서 기능을 활성화/비활성화할 수 있습니다.\n4. 긴급 상황에서는 긴급 호출 버튼을 사용하여 119에 연락할 수 있습니다."
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- 추가 정보 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타 문의 사항은 고객센터에 연락하시기 바랍니다."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 돌아가기 버튼 -->
        <Button
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="돌아가기"
            android:textSize="20sp"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
